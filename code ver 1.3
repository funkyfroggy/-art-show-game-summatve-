function setup() {
  createCanvas(canvasW, canvasH);
  if (currentScene == 1) {
    drawScene1()
  }
else if (currentScene == 2){
   drawScene2()}
  else if (currentScene == 3){
   drawScene3()}
  }
mouseClicked = function() {
  if (currentScene == 1 && mouseX >= 130 && mouseX <= 340 && mouseY >= 270 && mouseY <= 360) {
    drawScene2();
  }
keyReleased = function(){
  if(keyCode == '32' && currentScene == 2){
    drawScene3();
  }
}
} 

